{
  "manifest_version": 3,
  "name": "Tab Management Extension",
  "version": "1.0",
  "description": "Chrome extension to manage unused and duplicate tabs.",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
